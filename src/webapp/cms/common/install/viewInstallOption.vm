	<style type="text/css">
		body { font-size: 62.5%; }
		label, input { display:block; }
		input.text { margin-bottom:12px; width:95%; padding: .4em; }
		textarea { margin-bottom:12px; width:95%; height: 120px; padding: .4em; }
